<UserControl x:Class="Dota2Modding.VisualEditor.GUI.Components.Consoles.ConsolePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dota2Modding.VisualEditor.GUI.Components.Consoles"
             xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <t:Terminal
            AutoScroll="True"
            x:Name="terminal"
            IsReadOnly="true"
            VerticalScrollBarVisibility="Visible"
            Foreground="White"
            Background="Black"
            FontFamily="Cascadia Code, Consolas" />
    </Grid>
</UserControl>
